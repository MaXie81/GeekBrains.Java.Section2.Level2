<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="window.Controller">
    <children>
        <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0">
            <children>
                <HBox fx:id="panelAuth" alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Логин: " />
                        <TextField fx:id="txtLogin" />
                        <Label text="Пароль: " />
                        <PasswordField fx:id="pswPassword" />
                    </children>
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </HBox>
                <VBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#onMouseClickConnect" onKeyPressed="#onKeyEnterConnect" text="Подключиться" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox fx:id="panelDir" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <MenuBar mouseTransparent="true">
                            <menus>
                                <Menu mnemonicParsing="false" text="Клиент" />
                            </menus>
                        </MenuBar>
                        <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" spacing="10.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label text="Путь: " />
                                <TextField fx:id="txtClientPath" editable="false" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </HBox>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <ListView fx:id="lstClientDir" onMouseClicked="#onMouseClickClientDir" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="200.0" />
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <MenuBar mouseTransparent="true">
                            <menus>
                                <Menu mnemonicParsing="false" text="Сервер">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Close" />
                                    </items>
                                </Menu>
                            </menus>
                        </MenuBar>
                        <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" spacing="10.0" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                            <children>
                                <Label text="Путь: " />
                                <TextField fx:id="txtServerPath" editable="false" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <ListView fx:id="lstServerDir" onMouseClicked="#onMouseClickServerDir" VBox.vgrow="ALWAYS" />
                            </children></VBox>
                    </children>
                </VBox>
            </children></HBox>
        <HBox fx:id="panelComand" alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" spacing="10.0">
            <children>
                <Button maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#onMouseClickCopyFil" prefWidth="100.0" text="Копировать" />
                <Button maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#onMouseClickCreateDir" prefWidth="100.0" text="Создать" />
            <Button maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#onMouseClickDelete" prefWidth="100.0" text="Удалить" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
